pipeline {
  agent any
  environment {
    IMAGE_NAME = 'java-webapp'
  }
  stages {
    stage('Clone') {
      steps {
        git credentialsId: 'github-creds', url: 'https://github.com/umaharjan-incomm/maven-jenkins-cicd-docker-eks-project.git'
      }
    }
    stage('Maven Build') {
      steps {
        sh 'mvn clean install -pl webapp -am'
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'docker build -t $IMAGE_NAME .'
      }
    }
    stage('Run Container') {
      steps {
        sh '''
        docker rm -f java-webapp-container || true
        docker run -d -p 80:8080 --name java-webapp-container $IMAGE_NAME
        '''
      }
    }
  }
}

